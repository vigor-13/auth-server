{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../config/*.yaml",
        "outDir": "./dist/config",
        "watchAssets": true
      },
      {
        "include": "./assets/i18n/**/*",
        "outDir": "./dist/src/",
        "watchAssets": true
      }
    ]
  }
}
